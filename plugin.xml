<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.zel.copy"
        version="0.1">
  <name>Clipboard</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/copy.js" target="js/copy.js"/>

  <js-module src="www/copy.js" name="copy">
    <clobbers target="copy" />
  </js-module>

  <platform name="ios">
    <info>
Open Xcode, Go into settings, change `deployment target` to 7.0 or above and add `[Project Name]/Plugins/com.zel.copy/Bridging-Header.h` to Objective-c Bridging Header under the Swift Compiler - Code Generation options      
    </info>
    <config-file target="config.xml" parent="/*">
      <feature name="Copy">
        <param name="ios-package" value="HWPCopy"/>
      </feature>
    </config-file>
    
    <header-file src="src/ios/Bridging-Header.h" />
    <source-file src="src/ios/Copy.swift"/>
  </platform>

</plugin>